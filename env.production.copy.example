# ============================================
# Narae TMS v2.0 Production Environment Template
# Copy this file to .env.production and fill in values
# ============================================

# --------------------------------------------
# NextAuth Configuration (Required)
# --------------------------------------------
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-secure-random-secret-key-minimum-32-chars

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --------------------------------------------
# Database Configuration (Required)
# --------------------------------------------
DATABASE_URL=postgresql://tms_app:your-password@localhost:5432/tms

# --------------------------------------------
# Application Configuration
# --------------------------------------------
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# --------------------------------------------
# Security & Encryption (Required)
# --------------------------------------------
# AES-256 encryption key 생성: openssl rand -hex 32
ENCRYPTION_KEY=your-64-char-hex-encryption-key

# --------------------------------------------
# Oracle Configuration
# --------------------------------------------
ORACLE_THICK_MODE=true
ORACLE_CLIENT_LIB_DIR=/usr/lib/oracle/21/client64/lib

# --------------------------------------------
# LLM Configuration (Qwen2.5 via Ollama)
# --------------------------------------------
LLM_BASE_URL=http://localhost:11434
LLM_MODEL_NAME=qwen2.5:7b
LLM_API_TYPE=ollama
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=120000

# --------------------------------------------
# Feature Flags
# --------------------------------------------
FEATURE_AI_TUNING_GUIDE=true
FEATURE_AI_TUNING_ADVISOR=false
FEATURE_AUTO_TUNING=false
FEATURE_EMAIL_ALERTS=false
FEATURE_SLACK_ALERTS=false

# --------------------------------------------
# Performance & Caching
# --------------------------------------------
SQL_COLLECTION_INTERVAL=300
METRICS_COLLECTION_INTERVAL=60
SQL_STATS_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# --------------------------------------------
# Email Alerts (Optional)
# --------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@your-domain.com

# --------------------------------------------
# Slack Alerts (Optional)
# --------------------------------------------
SLACK_WEBHOOK_URL=

# --------------------------------------------
# Debug (Production에서는 false)
# --------------------------------------------
DEBUG=false
SQL_DEBUG=false
USE_MOCK_ORACLE=false
